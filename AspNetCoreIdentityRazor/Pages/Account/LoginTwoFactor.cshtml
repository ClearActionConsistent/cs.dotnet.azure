@page
@model AspNetCoreIdentityRazor.Pages.Account.LoginTwoFactorModel
@{
}

<h3>Verify OTP Code</h3>
<div class="container border" style="padding:20px">
	<form method="post">
		<div class="text-danger" asp-validation-summary="All"></div>
		<div class="mb-3 row">
			<div class="col-2">
				<label asp-for="EmailMFA.Code"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="EmailMFA.Code" class="form-control" />
				<span class="text-danger" asp-validation-for="EmailMFA.Code"></span>
			</div>
		</div>

		<div class="mb-3 row">
			<div class="col-2">
				<input type="submit" class="btn btn-primary" value="Verify" />
			</div>
			<div class="col-5">
				<input type="hidden" asp-for="EmailMFA.RememberMe" />
			</div>
		</div>
	</form>
</div>
